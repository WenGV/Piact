@model CeNAT_CEMEDE.Meteorologia.PIACT.Models.Users

@{
    ViewBag.Title = "Register";
    ViewBag.Message = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 >Registro de nuevos usuarios</h2>
@if(Session["mensaje"] == "correcto"){
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4>Para terminar su registro revise su correo electronico!</h4>
    </div>
    }
@if (Session["mensaje"] == "incorrecto")
{
    <div class="alert alert-success alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4>Lo sentimos, hay un problema en el env&iacute;o del correo electr&oacute;nico.</h4>
    </div>
}
