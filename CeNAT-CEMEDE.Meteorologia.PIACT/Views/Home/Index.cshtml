    <script>
        $(document).ready(function () {
            var owl = $('.owl-carousel'), autoplay_timeout = 5500;
            owl.owlCarousel({
                animateOut: 'fadeOut',//'fadeOutDown'
                animateIn: 'fadeIn',//'fadeInUp'
                autoHeight: true,
                autoplay: true,
                autoplayTimeout: autoplay_timeout,
                autoplayHoverPause: false,
                dots: true,
                items: 1,
                loop: true,
                video: true
            });
        });
        if ($("#content").length) {// && !$("body").hasClass('front')
            /* Waypoint for isScrolled class in body, triggered when you
               scroll to the #content element */
            $("#hp-scroll").waypoint({
                handler: function (direction) {
                    /* 	The direction variable tells us the way the element
                        was scrolled in, it has two option, down or up.
                        Uncomment the line below to have a clear example. */
                    //console.log("Direction: " + direction);
                    if (direction === 'down') {
                        $('body').addClass('isScrolled');
                    } else {//direction === 'up'
                        $('body').removeClass('isScrolled');
                    }
                },
                /* By default a waypoint triggers when the top of the element
                   hits the top of the window. What if we want it to trigger
                   when the element is 20px from the top instead?
                   The offset option can take a variety of different values
                   to help us control where a waypoint is triggered. */
                offset: '70%'
            });
        }
    </script>

