<li class="gua"><a href="#" value="23">Guatemala</a></li>
                    <li class="hd"><a href="#" value="22">Honduras</a></li>
                    <li class="sal"><a href="#" value="24">El Salvador</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">    
    $(document).ready(function() {
        $('#filter-sat-img-type').on("click", "#select", function () {
            var select_display = $('#sel-option').css("display");
            if (select_display === "none") {
                $('#sel-option').show();
            } else {
                $('#sel-option').hide();
            }
        });
        $('#sel-option a').on("click", function (e) {
            e.preventDefault();
            $('#select').text($(this).text());
            $('#sel-option').hide();
            $(this).addClass('current');
        })
    });
    
</script>
